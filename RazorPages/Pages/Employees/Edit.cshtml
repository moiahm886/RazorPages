@page "{Ssn}"
@model RazorPages.Pages.Employees.EditModel
@{
}
<style>
  form {
    background-color: #f1f1f1; 
    padding: 20px;
    border-radius: 5px;
    box-shadow: 0 0 5px rgba(0.2, 0, 0, 0.4);
    align-content:center;
  }
</style>
<form method="post">
    <h1 class="mb-3">Add Employees</h1>

    <div class="mb-3">
        <label for="Fname">First Name:</label>
        <input type="text" class="form-control col-md-6" asp-for="Edit.Fname"  id="Fname" name="Fname"  required>
    </div>

    <div class="mb-3">
        <label for="Minit">Middle Initial:</label>
        <input type="text" class="form-control col-md-6" asp-for="Edit.Minit" id="Minit" name="Minit" maxlength="1">
    </div>

    <div class="mb-3">
        <label for="Lname">Last Name:</label>
        <input type="text" class="form-control col-md-6" asp-for="Edit.Lname" id="Lname" name="Lname" required>
    </div>

    <div class="mb-3">
        <label for="Ssn">Social Security Number:</label>
        <input type="text" class="form-control col-md-6" asp-for="Edit.Ssn" id="Ssn" name="Ssn" pattern="\d{9}" minlength="9" maxlength="9" readonly>
        <small class="form-text text-muted">Please enter a 9-digit Social Security Number.</small>
    </div>

    <div class="mb-3">
        <label for="Bdate">Birth Date:</label>
        <input type="date" class="form-control col-md-6" asp-for="Edit.Bdate" id="Bdate" name="Bdate" required>
    </div>

    <div class="mb-3">
        <label for="Address">Address:</label>
        <input type="text" class="form-control col-md-6" asp-for="Edit.Address" id="Address" name="Address">
    </div>

    <div class="mb-3">
        <label for="Sex">Sex:</label>
        <input type="text" class="form-control col-md-6" asp-for="Edit.Sex" id="Sex" name="Sex" maxlength="1">
    </div>

    <div class="mb-3">
        <label for="Salary">Salary:</label>
        <input type="number" class="form-control col-md-6" asp-for="Edit.Salary" id="Salary" name="Salary" step="0.01" required>
    </div>

    <div class="mb-3">
        <label for="Super_ssn">Supervisor's Social Security Number:</label>
        <input type="text" class="form-control col-md-6" asp-for="Edit.Super_ssn" id="Super_ssn" name="Super_ssn" pattern="\d{9}" minlength="9" maxlength="9">
        <small class="form-text text-muted">Please enter a 9-digit Social Security Number for the supervisor (if applicable).</small>
    </div>

    <div class="mb-3">
        <label for="Dno">Department Number:</label>
        <input type="number" class="form-control col-md-6" asp-for="Edit.Dno" id="Dno" name="Dno" required>
    </div>
    <div class="mb-3 d-flex justify-content-center">
    <button type="submit" class="btn btn-primary" asp-page-handler="Update">Update</button>
    <button type="submit" class="btn btn-danger" asp-page-handler="Delete">Delete</button>
    </div>
</form>

